{
    "processors": [
        "stylelint-processor-styled-components"
    ],
    "extends": [
        "stylelint-config-recommended",
        "stylelint-config-rational-order"
    ],
    "rules": {
        "color-named": "never",
        "color-no-hex": true,
        "declaration-no-important": true,
        "length-zero-no-unit": true,
        "unit-allowed-list": [
            [
                "rem",
                "deg",
                "%",
                "vw",
                "vh",
                "ms",
                "s",
                "fr"
            ],
            {}
        ]
    }
}